<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="product_search_results" inherit_id="cms_form.search_results" name="CMS product form search results">
        <xpath expr="//h3[hasclass('item-name')]" position="replace">
          <h3 class="item-name">
            <t t-if="'website_url' in item and 'website_url' != '#'">
              <a t-att-href="item.website_url" t-field="item.name" />
            </t>
            <t t-if="'website_url' not in item or 'website_url' == '#'">
              <span t-field="item.name"/>
            </t>
          </h3>
        </xpath>
    </template>
</odoo>
